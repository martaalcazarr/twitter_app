<p class="alert alert-success"><%= notice %></p>

<h1>Tweets</h1>

<%= link_to "New tweet", new_tweet_path, class: "btn btn-primary " %>
<%= form_with(url: tweets_path, method: "get") do |form| %>
  <div class="form-group">
    <%= form.text_field :user_name, placeholder: "Search by user name", value: params[:user_name], class: "form-control" %>
  </div>
  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <div class="card">
      <div class="card-body">
        <%= render tweet %>
        <p>
          <%= link_to "Show this tweet", tweet, class: "btn btn-primary" %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @tweets, class: "pagination justify-content-center" %>
